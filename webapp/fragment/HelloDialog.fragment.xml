<core:FragmentDefinition xmlns:form2="sap.ui.layout.form"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form">
    <Dialog id="helloDialog"
            title="{view>/recipient/name}">
            <beginButton>
                <Button text="{i18n>save}"
                        tooltip="{i18n>save}"
                        type="Accept"
                        width="4rem"
                        press="onSave"></Button>
            </beginButton>
            <endButton>
                <Button text="{i18n>cancel}"
                        tooltip="{i18n>cancel}"
                        type="Reject"
                        width="4rem"
                        press="onCloseDialog"></Button>
            </endButton>
            <content>
                <form:SimpleForm
                  editable="true">
                  <form:content>
                    <Label text="{i18n>labelName}"/>
                    <Input value="{form>/FirstName}" />
                    <Label text="{i18n>labelLastName}"/>
                    <Input value="{form>/LastName}"/>                    
                  </form:content>
                </form:SimpleForm>                      
            </content>  
            
    </Dialog>
</core:FragmentDefinition>
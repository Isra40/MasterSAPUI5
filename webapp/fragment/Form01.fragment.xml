<core:FragmentDefinition
               xmlns="sap.m"
               xmlns:core="sap.ui.core"
               xmlns:form="sap.ui.layout.form">
    <Panel 
            headerText="{i18n>panelFrTitle}"
            class="sapUiResponsiveMargin"
            width="50%">
            <content>
                <form:SimpleForm id="simpleForm"
                                  editable="true">
                    <form:content>
                        <Label
                            text="{i18n>labelName}"/>
                        <Input/>
                        <Label
                            text="{i18n>labelLastName}"/>
                        <Input/>                        
                    </form:content>
                </form:SimpleForm>
            </content>
    </Panel>
</core:FragmentDefinition>
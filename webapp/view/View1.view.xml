<mvc:View
    controllerName="logali.sapui5.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
        titleAlignment="Center">
        <content>
            <Panel
                id = "idPanel"
                headerText="{i18n>helloPanel}"
                class="sapUiResponsiveMargin"
                width="auto">  
                <Button 
                    id='btnDHello'
                    press=".onOpenDialog"
                    class="sapUiSmallMarginEnd"                   
                    icon="sap-icon://action"
                />      
                <Button
                    id='btnHello'
                    text="{i18n>showHelloButtonText}"
                    press=".onShowHello"
                    class="sapUiSmallMarginEnd"                
                />
                <Input
                    id="inputHello"
                    value="{myModel>/inputData/value}"
                    description="Hello {myModel>/inputData/value}"
                    valueLiveUpdate="true"
                    width="60%"
                />
                <Text
                    id="txtHello"
                    text="Hello {myModel>/inputData/value}"
                    class="sapUiSmallMargin boldElements "
                />                
			</Panel> 
            <core:Fragment fragmentName="logali.sapui5.view.Form01" type="XML" />             
        </content>
    </Page>
</mvc:View>

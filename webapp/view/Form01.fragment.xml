<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form"
controllerName="logali.sapui5.controller.Form01">
<Panel id="fPanel" headerText="{i18n>panelFrTitle}" class="sapUiResponsiveMargin" width="70%">
    <f:SimpleForm id="form" editable="true">
        <f:content>
            <Label id="lblPerson" text="{i18n>labelPerson}" labelFor="persName"/>
            <Input id="persName" width="40%"></Input>
            <Button id="btnFragment" type="Accept" width="20%" text="{i18n>btnFragmentTxt}" press=".onCloseDialog"></Button>
        </f:content>
    </f:SimpleForm>
</Panel>
</core:FragmentDefinition>